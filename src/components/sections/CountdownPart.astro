---
interface Props {
    timeType: string
}

const { timeType } = Astro.props

---

<div class="flex flex-col justify-center items-center gap-y-2 w-16">
    <span class="text-4xl tabular-nums" {...{[`data-${timeType}`]: true }}>00</span>
    <span class="text-xs text-center">{timeType.charAt(0).toUpperCase() + timeType.slice(1)}</span>
</div>