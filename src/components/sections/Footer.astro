---
import InstaIcon from "@/icons/InstaIcon.astro";
import GithubIcon from "@/icons/GithubIcon.astro";
import TwitterXIcon from "@/icons/TwitterXIcon.astro";
---

<footer class="w-full border-primary border-t-2 flex flex-col md:flex-row justify-center items-center 
    md:justify-between pt-6 pb-20 gap-y-10 mt-">
    <span class="text-primary text-center">
        © 2025 Ace Courtroom Battles <span aria-hidden class="hidden md:inline">|</span>
        <br aria-hidden class="block md:hidden"> Fan project. Ace Attorney and related assets © Capcom Co., Ltd. No affiliation.
    </span>

    <ul class="flex flex-row gap-x-6 items-center">
        <li>
            <a target="_blank" rel="noopener" href="#" class="hover:scale-125 hover:opacity-70  inline-block transition">
                <InstaIcon />
            </a>
        </li>
        <li>
            <a target="_blank" rel="noopener" href="#" class="hover:scale-125 hover:opacity-70 inline-block transition">
                <TwitterXIcon />
            </a>
        </li>
        <li>
            <a target="_blank" rel="noopener" href="#" class="hover:scale-125 hover:opacity-70 inline-block transition">
                <GithubIcon />
            </a>
        </li>
    </ul>
</footer>

<style>
    footer {
        border-color: var(--color-secondary);
    }

    footer span {
        color: var(--color-secondary);
    }
</style>